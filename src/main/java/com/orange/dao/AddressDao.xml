<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.orange.dao.AddressDao">
    <resultMap id="add" type="Address">
        <collection property="user" ofType="User" column="uid" />
    </resultMap>
    <select id="selectAdd" resultMap="add">
        SELECT * FROM `address` a INNER JOIN
        `user` u ON
         a.`uid`=u.`uid`
        WHERE a.`uid`=#{user.uid}
    </select>
</mapper>